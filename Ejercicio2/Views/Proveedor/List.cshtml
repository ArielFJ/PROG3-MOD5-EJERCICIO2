@{
    ViewData["Title"] = "Productos";
}

<div class="text-center">
    <h1 class="display-4">Proveedores</h1>

    <div class="mt-4">
        @if (AlmacenManager.Instance.Proveedores.Count > 0)
        {
            <a class="btn btn-success text-white" asp-controller="Proveedor" asp-action="Agregar">Agregar Proveedor</a>
            <table class="table mt-3">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                </tr>
                @foreach (var item in AlmacenManager.Instance.Proveedores)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Direccion</td>
                        <td>@item.Num_telef</td>
                        <td><a class="btn btn-danger" asp-controller="Proveedor" asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a></td>
                        <td><a class="btn btn-warning" asp-controller="Proveedor" asp-action="Actualizar" asp-route-id="@item.Id">Actualizar</a></td>
                    </tr>
                }
            </table>
        }
        else
        {
            <h3 class="alert alert-info">Aún no ha agregado ningún proveedor.</h3>
            <a class="btn btn-success text-white" asp-controller="Proveedor" asp-action="Agregar">Agregar Proveedor</a>
        }
    </div>
</div>